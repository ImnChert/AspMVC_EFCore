@{
    ViewData["Title"] = "Создать";
}

@model HunterWeb.ViewModels.AnimalViewModel

<form asp-action="CreateAnimal" asp-controller="Animal" method="post" enctype="multipart/form-data">
    
    <div class="form-group">
        <label  >Имя</label>
        <input class="form-control" type="text" placeholder="Default input" name="name">

    </div>
    <div class="form-group">
        <label  >Дополнительное имя</label>
        <input class="form-control" type="text" placeholder="Default input" name="AdditionalName">
    </div>
    <div class="form-group">
        <label  >Описание животного</label>
        <input class="form-control" type="text" placeholder="Default input" name="Description">
    </div>
    <div class="form-group">
        <label >Картинка</label>
        <input class="form-control" type="file" name="uploadedFile" accept="images/*">
    </div>


    <input type="submit" class="btn btn-primary" value="Создать">



</form>

