@{
    ViewData["Title"] = "Создать";
}

@model HunterWeb.ViewModels.AnimalViewModel

<form asp-action="UpdateAnimal" asp-controller="Animal" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label>Имя</label>
        <input class="form-control" type="text" placeholder="Default input" asp-for="Name">
    </div>
    <div class="form-group">
        <label>Описание животного</label>
        <input class="form-control" type="text" placeholder="Default input" asp-for="Description">
    </div>
    <div class="mb-4" style="padding-bottom: 10px">
        <input type="hidden" class="form-control" asp-for="Id" />
        <input type="hidden" class="form-control" asp-for="ImageUrl" />
    </div>

    <input type="submit" class="btn btn-primary" value="Обновить">
</form>

